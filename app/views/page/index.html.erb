	<section class="parallax bg-testimonial">
		<div class="overlay"></div>
		<div class="container"></div>
		<!-- Start title -->
		<div class="title-section small">
			<h4>Join PearlBits</h4>
			<p>leading link shortener built with rails....</p>
		</div>

		<div class="container">
			<div class="col-lg-8 col-lg-offset-2">			
				<%= form_for(:link, url: new_link_path) do |f| %>      
				<div class="input-group">
					<%= f.text_field :actual_url, placeholder: "Enter url" ,class:"form-control" %>
					<span class="input-group-btn">
						<%= f.submit 'PearlBit!' ,class: "btn btn-primary btn-md" %>
					</span>
				</div>
			</div>
		</div>

		<div>
			<%= link_to(flash[:short_url], flash[:short_url]) if flash[:short_url] %>
			<% end %>
		</div>
		
	</section>
	<%= render partial: 'pearlbits_cards' %>
	<%=render partial: 'testimonial_section' %>

