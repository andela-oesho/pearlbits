<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <h2 class="text-center">Weclome <%= current_user.name %> </h2>
      <br>
      <%= form_for(:link, url: new_link_path, :html => {class: 'form-horizontal'}) do |f| %>
          <div class="form-group">
            <%= f.text_field :actual_url, placeholder: "Enter url" ,class:"form-control input-lg" %>
          </div>
          <div class="form-group text-center">
            <%= f.submit 'Shorten Url' ,class: "btn btn-primary btn-md" %>
          </div>

          <div>
            <%= link_to(flash[:short_url], flash[:short_url]) if flash[:short_url] %>
          </div>
           <% end %>
    </div>
  </div>
</div>
<hr>
<div class="col-sm-12  col-sm-offset-0 btm-space" align ="center">
  <h2 class="sub-header">My Links</h2>
  <div class="table-responsive">
   <table class="table table-bordered">
      <thead>
        <tr  >
          <th> Short Url</th>
          <th> Clicks</th>
          <th> Long Url</th>
        </tr>
      </thead>
      <tbody>
          <% if flash[:recent_links] %>
            <% flash[:recent_links].select do |links| %>
            <tr  >
              <td><%= links['short_url'] %></td>
              <td></td>
              <td><%= links['actual_url'] %></td>
              <td> Details  </td>
            <td> edit  </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
     
    </table>
   
    </div>