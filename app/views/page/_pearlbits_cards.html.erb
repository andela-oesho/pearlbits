<section id="Features">
	<div class="container">
		<div class="title-section">
			<h4><strong>Features</strong></h4>
		</div>
		<div class="row">
			    <div class="col-md-4">
                    <div class="pricing-header">
                    </div>
                    <div class="pricing-table primary">
                        <div class="pricing-title">
                            <h5>Popular Links</h5>

                        </div>
                        <div class="pricing-list">
                            <ul>
               
                                <li><b>google</b>.com </li>
                                <li><b>facebook</b>.com</li>
                                <li><b>google</b>.com</li>
                                
                            </ul>
                        </div>
                        <div class="pricing-footer">
                        </div>
                    </div>
                </div>
			<div class="col-md-4">
				<div class="pricing-header">
				</div>
				<div class="pricing-table primary">
					<div class="pricing-title color-box-second">
						<h5>Recent Links</h5>
					</div>
					<div class="pricing-list ">
						<ul>
						<% if flash[:anoymus_links] %>
						<% flash[:anoymus_links].select do |links| %>
						<li><%= link_to  "#{request.protocol}#{request.host_with_port}/"+ links['short_url']%> </li>
						<% end %>
						<% end %>
			
						</ul>
						
					</div>
					<div class="pricing-footer">
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="pricing-header">
				</div>
				<div class="pricing-table secondary">
					<div class="pricing-title color-box-third">
						<h5>Top PearlBiters</h5>
					</div>
					<div class="pricing-list">
						<ul>
							<% if flash[:top_users] %>
						<% flash[:top_users].select do |names| %>
						<li><%= names['name']%> </li>
						<% end %>
						<% end %>
						</ul>
					</div>
					<div class="pricing-footer">
					</div>
				</div>
			</div>
		</div>
	</section>
