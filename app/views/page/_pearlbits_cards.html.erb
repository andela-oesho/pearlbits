<section id="Features">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <div class="pricing-header">
        </div>
        <div class="pricing-table primary">
          <div class="pricing-title">
            <h5>Popular Links</h5>

          </div>
          <div class="pricing-list">
            <ul>
              <% @popular_links.each do |link| %>
              <li><%= link_to "#{request.protocol}#{request.host_with_port}/#{link['short_url']}", "/#{link.short_url}", :target => "_blank" %> &nbsp; &nbsp;<br> <span class="badge"> <%= pluralize(link.visits, "hit") %> </span></li> </li></br>
              <% end %>


            </ul>
          </div>
          <div class="pricing-footer">
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="pricing-header">
        </div>
        <div class="pricing-table primary">
          <div class="pricing-title color-box-second">
            <h5>Recent Links</h5>
          </div>
          <div class="pricing-list ">
            <ul>
              <% @anoymus_links.each do |link| %>
              <li><%= link_to  "#{request.protocol}#{request.host_with_port}/#{link['short_url']}", "/#{link.short_url}", :target => "_blank" %> &nbsp; &nbsp; <br> <span class="badge"> <%= pluralize(link.visits, "hit") %> </span></li></br>

              <% end %>


            </ul>

          </div>
          <div class="pricing-footer">
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="pricing-header">
        </div>
        <div class="pricing-table secondary">
          <div class="pricing-title color-box-third">
            <h5>Top PearlBiters</h5>
          </div>
          <div class="pricing-list">
            <ul>
              <% @top_users.each do |user| %>
              <li><%= user.name %> </li>
              <% end %>
            </ul>
          </div>
          <div class="pricing-footer">
          </div>
        </div>
      </div>
    </div>
  </section>
