
<div class="container">
        <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">sign up with pearlbits <small>It's free!</small></h3>
            </div>
            <div class="panel-body">
         <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
         <%= devise_error_messages! %>
           <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                    <%= f.text_field :name, placeholder: "Name" ,class:"form-control input-sm" %>
                    </div>
                <div class="form-group">
                  <%= f.text_field :email, placeholder: "Email" ,class:"form-control input-sm" %>
                </div>

                <div class="row">
                  <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                      <%= f.password_field :password, placeholder: "password", class:"form-control input-sm" %>
                    </div>
                  </div>
                  <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                      <%= f.password_field :password_confirmation, placeholder: "password_confirmation" ,class:"form-control input-sm" %>
                    </div>
                  </div>
                </div>
                
                   <%= f.submit "Submit", class: "btn btn-block" %>
              
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>